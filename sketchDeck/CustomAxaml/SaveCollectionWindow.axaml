<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="sketchDeck.CustomAxaml.SaveCollectionWindow"
        Width="300" Height="150"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Title="New collection">

    <StackPanel Margin="16" Spacing="12" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Spacing="12">
            <TextBlock Text="Enter a name for collection" FontSize="14" Foreground="White" HorizontalAlignment="Left"/>
            <TextBox x:Name="InputBox" Width="250"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
            <Button Content="Save" Width="80" Click="Save_Click" HorizontalContentAlignment="Center"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click" HorizontalContentAlignment="Center"/>
        </StackPanel>
    </StackPanel>
</Window>