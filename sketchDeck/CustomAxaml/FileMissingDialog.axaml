<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:sketchDeck.CustomAxaml"
        x:DataType="local:FileMissingDialog"
        x:Class="sketchDeck.CustomAxaml.FileMissingDialog"
        Width="520" Height="200"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Title="Missing File">

    <StackPanel Margin="20" Spacing="15">
        <TextBlock TextWrapping="Wrap">
            <Run Text="The file " />
            <Run Text="{Binding FilePath}" FontWeight="Bold"/>
            <Run Text=" does not exist. It may have been renamed or moved." />
        </TextBlock>

        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
            <Button x:Name="SetNewPathBtn" Content="Set New Path" HorizontalContentAlignment="Center"
                    Click="SetNewPath_Click"/>
            <Button x:Name="CancelBtn" Content="Cancel" HorizontalContentAlignment="Center"
                    Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>