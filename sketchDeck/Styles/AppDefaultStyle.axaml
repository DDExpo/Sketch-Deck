<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Styles.Resources>
    <Color x:Key="Win10.Accent">#FF0078D7</Color>       
    <Color x:Key="Win10.Background">#FF2B2B2B</Color>      
    <Color x:Key="Win10.PaneBackground">#FF323232</Color>  
    <Color x:Key="Win10.Border">#FF3F3F3F</Color>          
    <Color x:Key="Win10.Text">#FFFFFFFF</Color>         
    <Color x:Key="Win10.TextSecondary">#FFB0B0B0</Color>
    <Color x:Key="Win10.Hover">#FF3A3A3A</Color> 
    <Color x:Key="Win10.Pressed">#FF454545</Color>
    <Color x:Key="Win10.Selection">#FF094771</Color>
    <Color x:Key="Win10.SelectionInactive">#FF2F2F2F</Color>

    <SolidColorBrush x:Key="Brush.Accent" Color="{DynamicResource Win10.Accent}"/>
    <SolidColorBrush x:Key="Brush.Background" Color="{DynamicResource Win10.Background}"/>
    <SolidColorBrush x:Key="Brush.PaneBackground" Color="{DynamicResource Win10.PaneBackground}"/>
    <SolidColorBrush x:Key="Brush.Border" Color="{DynamicResource Win10.Border}"/>
    <SolidColorBrush x:Key="Brush.Text" Color="{DynamicResource Win10.Text}"/>
    <SolidColorBrush x:Key="Brush.TextSecondary" Color="{DynamicResource Win10.TextSecondary}"/>
    <SolidColorBrush x:Key="Brush.Hover" Color="{DynamicResource Win10.Hover}"/>
    <SolidColorBrush x:Key="Brush.Pressed" Color="{DynamicResource Win10.Pressed}"/>
    <SolidColorBrush x:Key="Brush.Selection" Color="{DynamicResource Win10.Selection}"/>
    <SolidColorBrush x:Key="Brush.SelectionInactive" Color="{DynamicResource Win10.SelectionInactive}"/>
  </Styles.Resources>

  <Style Selector="Window">
    <Setter Property="Background" Value="{DynamicResource Brush.Background}"/>
  </Style>

  <Style Selector="TextBlock">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text}"/>
  </Style>

  <Style Selector="Border.selectable:pointerover">
    <Setter Property="Background" Value="{DynamicResource Brush.Hover}"/>
  </Style>
  <Style Selector="Border.selectable:selected">
    <Setter Property="Background" Value="{DynamicResource Win10.Selection}"/>
    <Setter Property="BorderBrush" Value="#3399FF"/>
    <Setter Property="TextBlock.Foreground" Value="White"/>
  </Style>
  <Style Selector="Border.selectable:focus">
    <Setter Property="BorderBrush" Value="#88000000"/>
    <Setter Property="BorderThickness" Value="1"/>
  </Style>

  <Style Selector="Button, ToggleButton">
    <Setter Property="Background" Value="{DynamicResource Brush.PaneBackground}"/>
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="2"/>
  </Style>
  <Style Selector="Button:pointerover">
    <Setter Property="Background" Value="{DynamicResource Brush.Hover}"/>
  </Style>
  <Style Selector="Button:pressed">
    <Setter Property="Background" Value="{DynamicResource Brush.Pressed}"/>
  </Style>
  <Style Selector="Button:focus">
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Accent}"/>
  </Style>
  <Style Selector="Button:disabled">
    <Setter Property="Foreground" Value="{DynamicResource Brush.TextSecondary}"/>
  </Style>

  <Style Selector="TextBox">
    <Setter Property="Background" Value="{DynamicResource Brush.Background}"/>
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
  </Style>
  <Style Selector="TextBox:pointerover">
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Hover}"/>
  </Style>
  <Style Selector="TextBox:focus">
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Accent}"/>
  </Style>
  <Style Selector="TextBox:disabled">
    <Setter Property="Foreground" Value="{DynamicResource Brush.TextSecondary}"/>
  </Style>

  <Style Selector="ComboBox">
    <Setter Property="Background" Value="{DynamicResource Brush.Background}"/>
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="8,6"/>
  </Style>
  <Style Selector="ComboBox:pointerover">
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Accent}"/>
  </Style>
  <Style Selector="ComboBox:focus">
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Accent}"/>
  </Style>
  <Style Selector="ComboBox:disabled">
    <Setter Property="Foreground" Value="{DynamicResource Brush.TextSecondary}"/>
  </Style>

  <Style Selector="ScrollBar[Orientation=Vertical] Thumb">
    <Setter Property="Width" Value="6"/>
  </Style>
  <Style Selector="ScrollBar[Orientation=Horizontal] Thumb">
    <Setter Property="Height" Value="6"/>
  </Style>

  <Style Selector="ListBox, TreeView, DataGrid">
    <Setter Property="Background" Value="{DynamicResource Brush.Background}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="2"/>
  </Style>

  <Style Selector="ListBoxItem, TreeViewItem">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text}"/>
    <Setter Property="Padding" Value="6,3"/>
  </Style>
  <Style Selector="ListBoxItem:pointerover, TreeViewItem:pointerover">
    <Setter Property="Background" Value="{DynamicResource Brush.Hover}"/>
  </Style>
  <Style Selector="ListBoxItem:selected:focus, TreeViewItem:selected:focus">
    <Setter Property="Background" Value="{DynamicResource Brush.Selection}"/>
    <Setter Property="Foreground" Value="White"/>
  </Style>
  <Style Selector="ListBoxItem:selected:unfocused, TreeViewItem:selected:unfocused">
    <Setter Property="Background" Value="{DynamicResource Brush.SelectionInactive}"/>
    <Setter Property="Foreground" Value="{DynamicResource Brush.Text}"/>
  </Style>

</Styles>
