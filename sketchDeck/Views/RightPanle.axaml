<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="sketchDeck.Views.RightPanel">

    <Grid>
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" Margin="16" RowSpacing="8">
            <Button Grid.Row="0" Content="Button 1"/>
            <Button Grid.Row="1" Content="Button 2"/>
            <Button Grid.Row="2" Content="Button 3"/>
            <Button Grid.Row="3" Content="Button 4"/>
            <Button Grid.Row="4" Content="Button 5"/>
        </Grid>

        <Button Width="32"
                Height="32"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="10"
                BorderThickness="0"
                CornerRadius="24"
                ToolTip.Tip="Always on Top"
                FontSize="20"
                Foreground="White"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center">

            <Viewbox Stretch="Uniform" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Path Data="m102 133c-17.6 0-32-14.4-32-32s14.4-32 32-32 32 14.4 32 32-14.4 32-32 32m89.6-64c-12.8-36.8-48-64-89.6-64-52.8 0-96 43.2-96 96s43.2 96 96 96c41.6 0 76.8-27.2 89.6-64h54.4v64h64v-64h48v-64h-166.4z"
                      Fill="White"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
            </Viewbox>

            <Button.Styles>
                <Style Selector="Button">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black"
                                              BlurRadius="8"
                                              OffsetX="2"
                                              OffsetY="2"
                                              Opacity="0.4"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Cursor" Value="Hand"/>
                </Style>
            </Button.Styles>
        </Button>
    </Grid>

</UserControl>
