<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:sketchDeck.ViewModels"
        x:Class="sketchDeck.Views.ProgressPopup"
        Width="500" Height="100"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Title="Processing..."
        x:DataType="vm:MiddlePanelViewModel">

    <StackPanel Margin="10">
        <TextBlock Text="Processing file:" FontWeight="Bold"/>
        <TextBlock Text="{Binding CurrentImagePath}" TextWrapping="Wrap" />
    </StackPanel>
</Window>