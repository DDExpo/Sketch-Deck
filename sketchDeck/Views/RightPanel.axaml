<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:sketchDeck.ViewModels"
             xmlns:conv="clr-namespace:sketchDeck.ViewModels"
             xmlns:models="clr-namespace:sketchDeck.Models"
             xmlns:ir="using:Avalonia.Controls"
             x:Class="sketchDeck.Views.RightPanel"
             x:DataType="vm:RightPanelViewModel">

    <UserControl.Resources>
        <DataTemplate x:Key="DetailsTemplate" x:DataType="vm:RightPanelViewModel">
            <DataGrid ItemsSource="{Binding Parent.Images}" Sorting="OnSorting" SelectionMode="Extended" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserResizeColumns="True" IsReadOnly="True" Margin="0,0,10,0">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="64">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="models:ImageItem">
                                <StackPanel DoubleTapped="OnImageDoubleTapped">
                                    <Image Source="{Binding Thumbnail^}" Width="48" Height="48" Margin="8"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Name" Width="96" SortMemberPath="Name">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="models:ImageItem">
                                <StackPanel VerticalAlignment="Center" Margin="4,0,4,0">
                                    <TextBlock Text="{Binding Name}" DoubleTapped="OnTextBlockDoubleTapped" IsVisible="{Binding !IsEditing}"/>
                                    <TextBox Text="{Binding Name, Mode=TwoWay}" IsVisible="{Binding IsEditing}" KeyDown="EditTextBox_KeyDown" LostFocus="EditTextBox_LostFocus"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" SortMemberPath="Type" Width="72"/>
                    <DataGridTextColumn Header="Size" Binding="{Binding SizeDisplay}" SortMemberPath="Size" Width="84"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding DateModified}" SortMemberPath="DateModified" Width="*"/>
                    <DataGridTemplateColumn Width="66" CanUserResize="False"> 
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="6" BorderBrush="White" Background="#000000" BorderThickness="1"
                                        Click="DeleteItem_Click">
                                    <Path Data="M-4-1 6 9M-4 9 6-1" Stroke="White" StrokeThickness="1.3" />
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
                <DataGrid.Styles>
                  <Style Selector="DataGridRow" x:DataType="models:ImageItem">
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                  </Style>
                  <Style Selector="DataGridCell:focus /template/ Grid#FocusVisual">
                    <Setter Property="IsVisible" Value="False"/>
                   </Style>
                   <Style Selector="DataGridCell:current /template/ Rectangle#CurrencyVisual">
                    <Setter Property="IsVisible" Value="False"/>
                  </Style>
                </DataGrid.Styles>
            </DataGrid>
        </DataTemplate>
        
        <DataTemplate x:Key="SmallTemplate" x:DataType="vm:RightPanelViewModel">
           <ScrollViewer x:Name="ImagesScrollViewer" ScrollChanged="ScrollViewer_ScrollChanged" AttachedToVisualTree="OnScrollViewerAttached">
                <ir:ItemsRepeater ItemsSource="{Binding Parent.Images}">
                    <ir:ItemsRepeater.Layout>
                        <UniformGridLayout Orientation="Horizontal" MinColumnSpacing="10" MinRowSpacing="15" MinItemWidth="128" MinItemHeight="158"/>
                    </ir:ItemsRepeater.Layout>
                    <ir:ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="models:ImageItem">
                            <Border Classes="selectable" Classes.selected="{Binding IsSelected}" Padding="4" CornerRadius="6" Tapped="OnBorderTapped">
                                <Grid>
                                    <StackPanel Margin="0,4,0,0">
                                        <Image Source="{Binding Thumbnail^}" DoubleTapped="OnImageDoubleTapped"
                                               Width="128" Height="128"/>
                                        <TextBlock Text="{Binding Name}" DoubleTapped="OnTextBlockDoubleTapped" IsVisible="{Binding !IsEditing}"/>
                                        <TextBox Text="{Binding Name, Mode=TwoWay}" IsVisible="{Binding IsEditing}" KeyDown="EditTextBox_KeyDown" LostFocus="EditTextBox_LostFocus"/>
                                    </StackPanel>
                                    
                                    <Button Classes="borderDeleteBtn" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top"
                                            BorderBrush="White" Background="#000000" BorderThickness="1" CornerRadius="6" Margin="0"
                                            Click="DeleteItem_Click">
                                        <Path Data="M-4-1 6 9M-4 9 6-1" Stroke="White" StrokeThickness="1.3" />
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ir:ItemsRepeater.ItemTemplate>
                </ir:ItemsRepeater>
            </ScrollViewer>
        </DataTemplate>

        <DataTemplate x:Key="MediumTemplate" x:DataType="vm:RightPanelViewModel">
           <ScrollViewer x:Name="ImagesScrollViewer" ScrollChanged="ScrollViewer_ScrollChanged" AttachedToVisualTree="OnScrollViewerAttached">
                <ir:ItemsRepeater ItemsSource="{Binding Parent.Images}">
                    <ir:ItemsRepeater.Layout>
                        <UniformGridLayout Orientation="Horizontal" MinColumnSpacing="8" MinRowSpacing="15" MinItemWidth="256" MinItemHeight="286"/>
                    </ir:ItemsRepeater.Layout>
                    <ir:ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="models:ImageItem">
                            <Border Classes="selectable" Classes.selected="{Binding IsSelected}" Padding="4" CornerRadius="6" Tapped="OnBorderTapped">
                                <Grid>
                                    <StackPanel Margin="0,4,0,0">
                                        <Image Source="{Binding Thumbnail^}" DoubleTapped="OnImageDoubleTapped"
                                               Width="236" Height="256"/>
                                        <TextBlock Text="{Binding Name}" DoubleTapped="OnTextBlockDoubleTapped" IsVisible="{Binding !IsEditing}"/>
                                        <TextBox Text="{Binding Name, Mode=TwoWay}" IsVisible="{Binding IsEditing}" KeyDown="EditTextBox_KeyDown" LostFocus="EditTextBox_LostFocus"/>
                                    </StackPanel>

                                    <Button Classes="borderDeleteBtn" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top"
                                            BorderBrush="White" Background="#000000" BorderThickness="1" CornerRadius="6" Margin="0"
                                            Click="DeleteItem_Click">
                                        <Path Data="M-4-1 6 9M-4 9 6-1" Stroke="White" StrokeThickness="1.3" />
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ir:ItemsRepeater.ItemTemplate>
                </ir:ItemsRepeater>
            </ScrollViewer>
        </DataTemplate>

        <DataTemplate x:Key="BigTemplate" x:DataType="vm:RightPanelViewModel">
           <ScrollViewer x:Name="ImagesScrollViewer" ScrollChanged="ScrollViewer_ScrollChanged" AttachedToVisualTree="OnScrollViewerAttached">
                <ir:ItemsRepeater ItemsSource="{Binding Parent.Images}">
                    <ir:ItemsRepeater.Layout>
                        <UniformGridLayout Orientation="Horizontal" MinColumnSpacing="10" MinRowSpacing="10" MinItemWidth="376" MinItemHeight="386"/>
                    </ir:ItemsRepeater.Layout>
                    <ir:ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="models:ImageItem">
                            <Border Classes="selectable" Classes.selected="{Binding IsSelected}" Padding="4" CornerRadius="6" Tapped="OnBorderTapped">
                                <Grid>
                                    <StackPanel Margin="0,4,0,0">
                                        <Image Source="{Binding Thumbnail^}" DoubleTapped="OnImageDoubleTapped"
                                               Width="356" Height="356"/>
                                        <TextBlock Text="{Binding Name}" DoubleTapped="OnTextBlockDoubleTapped" IsVisible="{Binding !IsEditing}"/>
                                        <TextBox Text="{Binding Name, Mode=TwoWay}" IsVisible="{Binding IsEditing}" KeyDown="EditTextBox_KeyDown" LostFocus="EditTextBox_LostFocus"/>
                                    </StackPanel>
                                    <Button Classes="borderDeleteBtn" Width="24" Height="24" HorizontalAlignment="Right" VerticalAlignment="Top"
                                            BorderBrush="White" Background="#000000" BorderThickness="1.3" CornerRadius="6" Margin="2"
                                            Click="DeleteItem_Click">
                                        <Path Data="M10.5-1.5l-15 15m15 0-15-15" Stroke="White" StrokeThickness="1.5" />
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ir:ItemsRepeater.ItemTemplate>
                </ir:ItemsRepeater>
            </ScrollViewer>
        </DataTemplate>

        <DataTemplate x:Key="GiganticTemplate" x:DataType="vm:RightPanelViewModel">
           <ScrollViewer x:Name="ImagesScrollViewer" ScrollChanged="ScrollViewer_ScrollChanged" AttachedToVisualTree="OnScrollViewerAttached">
                <ir:ItemsRepeater ItemsSource="{Binding Parent.Images}">
                    <ir:ItemsRepeater.Layout>
                        <UniformGridLayout Orientation="Horizontal" MinColumnSpacing="10" MinRowSpacing="10" MinItemWidth="522" MinItemHeight="532"/>
                    </ir:ItemsRepeater.Layout>
                    <ir:ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="models:ImageItem">
                            <Border Classes="selectable" Classes.selected="{Binding IsSelected}" Padding="4" CornerRadius="6" Tapped="OnBorderTapped">
                                <Grid>
                                    <StackPanel Margin="0,4,0,0">
                                        <Image Source="{Binding Thumbnail^}" DoubleTapped="OnImageDoubleTapped"
                                               Width="502" Height="502"/>
                                        <TextBlock Text="{Binding Name}" DoubleTapped="OnTextBlockDoubleTapped" IsVisible="{Binding !IsEditing}"/>
                                        <TextBox Text="{Binding Name, Mode=TwoWay}" IsVisible="{Binding IsEditing}" KeyDown="EditTextBox_KeyDown" LostFocus="EditTextBox_LostFocus"/>
                                    </StackPanel>

                                    <Button Classes="borderDeleteBtn" Width="24" Height="24" HorizontalAlignment="Right" VerticalAlignment="Top"
                                            BorderBrush="White" BorderThickness="1.3" Background="#000000" CornerRadius="6" Margin="2"
                                            Click="DeleteItem_Click">
                                        <Path Data="M10.5-1.5l-15 15m15 0-15-15" Stroke="White" StrokeThickness="1.5" />
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ir:ItemsRepeater.ItemTemplate>
                </ir:ItemsRepeater>
            </ScrollViewer>
        </DataTemplate>

        <conv:ViewToTemplateConverter x:Key="ViewToTemplateConverter"
                                      Details="{StaticResource DetailsTemplate}"
                                      Small="{StaticResource SmallTemplate}"
                                      Medium="{StaticResource MediumTemplate}"
                                      Big="{StaticResource BigTemplate}"
                                      Gigantic="{StaticResource GiganticTemplate}"/>
    </UserControl.Resources>

    <ContentControl x:Name="ContentHost" Margin="0,12,0,10" Content="{Binding}"
                    ContentTemplate="{Binding Parent.SelectedView, Converter={StaticResource ViewToTemplateConverter}}"/>
</UserControl>